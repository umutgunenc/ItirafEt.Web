<ModalComponent @ref="_viewerModel" Title="Okuyanlar" TitleClass="mx-auto" ChildClass="mb-3">
	<ChildContent>

		@if (_viewers.Count == 0)
		{
			<div class="alert alert-info" role="alert">
				Gönderiyi henüz kimse okumadı.
			</div>
		}
		else
		{
